<%= render "shared/second"%>

<p class="banner"><%= current_user.nickname %>さんのマイページです</p>

<p class="title">お気に入り一覧</p>

<div class="food-contents">
  <ul class="food-lists">
    <% @foods.each do |food| %>
      <div class="food-info">
      <%= image_tag food.image, class: "food-img" %>
      <div class="contents">
      <h3 class="food-name">
        <%= food.name %>
      </h3>
      <p class="info"><%= food.calorie %>kcal</p>
      <p class="info">たんぱく質:<%= food.protein %>g</p>
      <p class="info">脂質:<%= food.fat %>g</p>
      <p class="info">炭水化物:<%= food.carbohydrate %>g</p>
      </div>
      </div>
    <% end %>
  </ul>
</div>


